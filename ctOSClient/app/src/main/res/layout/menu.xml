<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:maxHeight="400dp"
    android:maxWidth="250dp"
    android:minHeight="50dp"
    android:minWidth="50dp"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/menu_fence"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:contentDescription="basicFence"
                android:foreground="@drawable/gate"
                android:foregroundGravity="right|center_vertical"
                android:onClick="actionChoice"
                android:text="Fence gate" />

            <Button
                android:id="@+id/menu_door"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:contentDescription="basicDoor"
                android:foreground="@drawable/door"
                android:foregroundGravity="right|center_vertical"
                android:onClick="actionChoice"
                android:text="Door" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>